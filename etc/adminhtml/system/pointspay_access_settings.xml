<?xml version="1.0"?>

<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="pointspay_access_settings" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1"
           showInStore="0">
        <label><![CDATA[Access settings]]></label>
        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
        <field id="consumer_key" translate="label" type="password" sortOrder="20" showInDefault="1" showInWebsite="1"
               showInStore="0" canRestore="1">
            <label>Consumer Key</label>
            <config_path>payment/pointspay_access_settings/consumer_key</config_path>
            <validate>required-entry validate-length minimum-length-1</validate>
            <comment model="Pointspay\Pointspay\Model\Comment\AccessFieldsEnding"/>
        </field>
        <field id="service_certificate_uploader" translate="label" type="Pointspay\Pointspay\Block\Adminhtml\System\Config\Form\Field\File" sortOrder="30" showInDefault="1" showInWebsite="1" >
            <label>Pointspay Certificate</label>
            <config_path>payment/pointspay_access_settings/certificate</config_path>
            <backend_model>Pointspay\Pointspay\Model\Config\Backend\File</backend_model>
            <comment model="Pointspay\Pointspay\Model\Comment\AccessFieldsEnding"/>
            <upload_dir config="system" scope_info="1">certificate</upload_dir>
        </field>
        <field id="merchant_certificate" translate="label" type="button" sortOrder="40" showInDefault="1"
               showInWebsite="1" showInStore="0">
            <label>Merchant Certificate</label>
            <config_path>payment/pointspay_access_settings/merchant_certificate</config_path>
            <frontend_model>Pointspay\Pointspay\DownloadMerchantCertificate</frontend_model>
            <comment model="Pointspay\Pointspay\Model\Comment\DownloadCertificateNote"/>
        </field>
    </group>
</include>
